Date: Wed, 8 Nov 2023 11:14:41 +0000
Subject: [PATCH] fix device tree for olimex a20 som carrier board

---
 .../boot/dts/sun7i-a20-olinuxino-micro.dts    | 25 ++++++++++++++++++-
 1 file changed, 24 insertions(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/sun7i-a20-olinuxino-micro.dts b/arch/arm/boot/dts/sun7i-a20-olinuxino-micro.dts
index 359bd0d5b3b1..87f8c94e99d2 100644
--- a/arch/arm/boot/dts/sun7i-a20-olinuxino-micro.dts
+++ b/arch/arm/boot/dts/sun7i-a20-olinuxino-micro.dts
@@ -57,7 +57,10 @@
 	aliases {
 		serial0 = &uart0;
 		serial1 = &uart6;
-		serial2 = &uart7;
+		serial2 = &uart2;
+		serial3 = &uart4;
+		serial4 = &uart3;
+		serial5 = &uart7;
 		spi0 = &spi1;
 		spi1 = &spi2;
 	};
@@ -329,6 +332,26 @@
 	status = "okay";
 };
 
+&uart2 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart2_pi_pins>, <&uart2_cts_rts_pi_pins>;
+	uart-has-rtscts;
+	status = "okay";
+};
+
+&uart3 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart3_pg_pins>, <&uart3_cts_rts_pg_pins>;
+	uart-has-rtscts;
+	status = "okay";
+};
+
+&uart4 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart4_pg_pins>;
+	status = "okay";
+};
+
 &uart7 {
 	pinctrl-names = "default";
 	pinctrl-0 = <&uart7_pi_pins>;
