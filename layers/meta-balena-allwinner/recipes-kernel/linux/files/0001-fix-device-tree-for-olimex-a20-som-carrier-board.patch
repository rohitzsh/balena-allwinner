From f41240030f9b82818f4907341d473b223518c7ac Mon Sep 17 00:00:00 2001
From: rohit <rohit.sharma@r2p.com>
Date: Wed, 8 Nov 2023 11:14:41 +0000
Subject: [PATCH] fix device tree for olimex a20 som carrier board

---
 .../boot/dts/sun7i-a20-olinuxino-micro.dts    | 57 ++++++++++++++++++-
 1 file changed, 56 insertions(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/sun7i-a20-olinuxino-micro.dts b/arch/arm/boot/dts/sun7i-a20-olinuxino-micro.dts
index 359bd0d5b3b1..2b87006d0a6c 100644
--- a/arch/arm/boot/dts/sun7i-a20-olinuxino-micro.dts
+++ b/arch/arm/boot/dts/sun7i-a20-olinuxino-micro.dts
@@ -57,7 +57,10 @@
 	aliases {
 		serial0 = &uart0;
 		serial1 = &uart6;
-		serial2 = &uart7;
+		serial2 = &uart2;
+		serial3 = &uart4;
+		serial4 = &uart3;
+		serial5 = &uart7;
 		spi0 = &spi1;
 		spi1 = &spi2;
 	};
@@ -88,6 +91,26 @@
 			default-state = "on";
 		};
 	};
+
+	gpio {
+		compatible = "gpio-leds";
+		pinctrl-names = "default";
+		pinctrl-0 = <&gpio_out_pin>;
+
+		ph11 {
+			label = "rs232-fet";
+			gpios = <&pio 7 11 GPIO_ACTIVE_HIGH>;
+			default-state = "on";
+			output_high;
+		};
+
+		pe5 {
+			label = "audio-sd";
+			gpios = <&pio 4 5 GPIO_ACTIVE_LOW>;
+			default-state = "on";
+			output_low;
+		};
+	};
 };
 
 &ahci {
@@ -254,6 +277,12 @@
 		function = "gpio_out";
 		drive-strength = <20>;
 	};
+
+	gpio_out_pin: gpio-out-pin {
+		pins = "PH11", "PE5";
+		function = "gpio_out";
+		drive-strength = <20>;
+	};
 };
 
 #include "axp209.dtsi"
@@ -329,12 +358,38 @@
 	status = "okay";
 };
 
+&uart2 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart2_pi_pins>, <&uart2_cts_rts_pi_pins>;
+	uart-has-rtscts;
+	status = "okay";
+};
+
+&uart3 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart3_pg_pins>, <&uart3_cts_rts_pg_pins>;
+	uart-has-rtscts;
+	status = "okay";
+};
+
+&uart4 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart4_pg_pins>;
+	status = "okay";
+};
+
 &uart7 {
 	pinctrl-names = "default";
 	pinctrl-0 = <&uart7_pi_pins>;
 	status = "okay";
 };
 
+&csi0 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&csi0_8bits_pins>;
+	status = "okay";
+};
+
 &usb_otg {
 	dr_mode = "otg";
 	status = "okay";
